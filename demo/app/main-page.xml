<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
    <Page.actionBar>
        <ActionBar title="Image Picker" />
    </Page.actionBar>
    <GridLayout rows="*, auto, auto">
        <ListView items="{{ imageAssets }}">
            <ListView.itemTemplate>
                <GridLayout columns="94, *" rows="*, *">
                    <Image rowSpan="2" width="80" height="80" src="{{ $value }}" stretch="fill" />
                    <Label col="1" text="Some text" />
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>

        <Image src="{{ imageSrc }}" visibility="{{ isSingleMode ? 'visible' : 'collapsed' }}" width="300" height="300" stretch="aspectFit" />
        <Button row="1" text="Pick Single" tap="{{ onSelectSingleTap }}" horizontalAlignment="center" />
        <Button row="2" text="Pick Multiple" tap="{{ onSelectMultipleTap }}" horizontalAlignment="center" />
    </GridLayout>
</Page>
