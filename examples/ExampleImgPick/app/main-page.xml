<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <GridLayout rows="*, auto">
    <ListView id="urls-list">
		<ListView.itemTemplate>
			<GridLayout columns="94, *" rows="*, *">
				<Image rowSpan="2" width="94" height="94" src="{{ thumb }}" />
				<Label col="1" text="{{ uri }}" />
				<Label col="1" row="1" text="{{ fileUri }}" />
			</GridLayout>
		</ListView.itemTemplate>
    </ListView>
    <Button row="1" text="Select Images" tap="onSelectImagesTap" horizontalAlignment="center" verticalAlignment="center" />
  </GridLayout>
</Page>
